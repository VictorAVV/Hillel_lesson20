{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="jumbotron text-center">
	<h3>Login</h3>
</div>

<div class="container text-center" >
    <form method="post" class="w-75 m-auto">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <label for="inputEmail" class="sr-only my-3">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control my-3" placeholder="Email" required autofocus>
        <label for="inputPassword" class="sr-only my-3">Пароль</label>
        <input type="password" name="password" id="inputPassword" class="form-control my-3" placeholder="Password" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">Войти</button>

    </form>
    <hr class="w-75">
    <a href="{{ path('create_new_user') }}">Зарегистрироваться</p>

</div>
{% endblock %}
