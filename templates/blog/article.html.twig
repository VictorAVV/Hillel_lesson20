{% extends 'base.html.twig' %}

{% block title %}Создаем MVC-блог на Symfony / {{ article.title }}{% endblock %}

{% block body %}
<div class="jumbotron text-center">
	<h3>{{ article.title }}</h3>
</div>

<div class="container">
    <div class="clearfix mb-3">
        <div class="float-right">
            <a class="btn btn-danger btn-lg btn-sm" 
                href="{{ path('articleDelete', {'id': article.id}) }}" role="button">Удалить статью</a>
        </div>
        <div class="float-right mr-3">
            <a class="btn btn-primary btn-lg btn-sm" 
                href="{{ path('articleEdit', {'id': article.id}) }}" role="button">Редактировать статью</a>
        </div>
    </div>
	{{ article.content|nl2br }}
    <div class="article-author-date text-right">
        {% if article.author %}<p class="mb-0">{{article.author}}</p>{% endif %}
        <p>{{ article.datetime|date('Y-m-d H:i:s') }}</p>
    </div>
    {% include '/blog/prevNextBtn.html.twig' %}
</div>

{% endblock %}