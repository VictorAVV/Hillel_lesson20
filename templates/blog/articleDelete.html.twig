{% extends 'base.html.twig' %}

{% block title %}MVC-блог на Symfony / {{ title }}{% endblock %}

{% block body %}
<div class="jumbotron text-center">
	<h3 class="text-danger">{{ title }}</h3>
    <h2>{{ article.title }}</h2>
</div>

<div class="container">
    {% if deleted %}
        <div class="mb-5 text-center">
            <p>Вернуться к списку статей</p>
        </div>
        <div class="row">
            <a class="btn btn-secondary ml-auto mr-auto px-5" href="{{ path('blog') }}" role="button">OK</a>
        </div>
    {% else %}
        <div class="mb-5 text-center">
            <p>Вы уверенны, что хотите удалить статью?</p>
        </div>
        
        {{ include('blog/_delete_form.html.twig') }}
    {% endif %}
</div>

{% endblock %}