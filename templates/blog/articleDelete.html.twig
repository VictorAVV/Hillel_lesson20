{% extends 'base.html.twig' %}

{% block title %}MVC-блог на Symfony / {{ title }}{% endblock %}

{% block body %}
<div class="jumbotron text-center">
	<h3 class="text-danger">{{ title }}</h3>
    <h2>{{ article.title }}</h2>
</div>

<div class="container">
    {% if deleted %}
        <div class="mb-5 text-center">
            <p>Вернуться к списку статей</p>
        </div>
        <div class="row">
            <a class="btn btn-secondary ml-auto mr-auto px-5" href="{{ path('blog') }}" role="button">OK</a>
        </div>
    {% else %}
        <div class="mb-5 text-center">
            <p>Вы уверенны, что хотите удалить статью?</p>
        </div>
        <form action="{{ path('articleDelete', {'id': article.id}) }}" method="POST">
            <div class="form-group">
                <input type="hidden" name="confirmDelete" value="1">
                <input type="hidden" name="id" value="{{ article.id }}">
            </div>
            <div class="row">
                <button type="submit" class="ml-auto btn btn-danger">Удалить</button>
                <a class="btn btn-secondary ml-3 mr-auto" href="{{ path('articleGet', {'id': article.id}) }}" role="button">Отмена</a>
            </div>
        </form>
    {% endif %}
</div>

{% endblock %}