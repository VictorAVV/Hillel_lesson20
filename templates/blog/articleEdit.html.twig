{% extends 'base.html.twig' %}

{% block title %}MVC-блог на Symfony / {{ title }}{% endblock %}

{% block body %}
<div class="jumbotron text-center">
	<h3>{{ title }}</h3>
</div>

<div class="container">
    <form action="{{ path('articleCreate') }}" method="POST">
        <div class="form-group">
            <label for="titleArticle">Название статьи:</label>
            {% if article.id %}
                <input type="hidden" name="id" value="{{ article.id }}">
            {% endif %}
            <input type="input" class="form-control" id="titleArticle" name="titleArticle" aria-describedby="titleArticle"
                placeholder="Enter title of article" required="required" value="{{ article.title }}">
        </div>
        <div class="form-group">
            <label for="contentArticle">Текст статьи:</label>
            <textarea class="form-control" id="contentArticle" 
                name="contentArticle" rows="10" required>{{ article.content }}</textarea>
        </div>
        <div class="form-group">
            <label for="titleArticle">Автор:</label>
            <input type="input" class="form-control" id="authorArticle" name="authorArticle" 
                aria-describedby="authorArticle" placeholder="Enter author of article" value="{{ article.author }}">
        </div>
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a class="btn btn-secondary ml-3" 
            {% if article.id %}
                href="{{ path('articleGet', {'id': article.id}) }}"
            {% else %}
                href="{{ path('blog') }}"
            {% endif %}
            role="button">Отмена</a>
    </form>
</div>

{% endblock %}