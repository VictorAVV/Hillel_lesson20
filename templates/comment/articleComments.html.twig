<h4>Коментарии ({{ comments|length }})</h4>

{% for comment in comments %}
    <hr class="my-0">
    <div class="">
        <p class="my-0 text-secondary">
            <small>
                <span class="text-primary">{{ comment.author }}</span> {{ comment.datetime ? comment.datetime|date('Y-m-d H:i:s') : '' }}
            </small>
        </p>
        <p class="my-0">{{ comment.content }}</p>
    </div>
{% else %}
    <div class="">
        Оставь первый комментарий
    </div>
{% endfor %}
