<h4>Коментарии ({{ comments|length }})</h4>

{% for comment in comments %}
    <hr class="my-0">
    <div class="">
        <p class="my-0 text-secondary">
            <small>
                <span class="text-primary">{{ comment.user.name | default('-unknown-') }}</span> {{ comment.datetime ? comment.datetime|date('Y-m-d H:i:s') : '' }}
            </small>
        </p>
        <p class="my-0">{{ comment.content }}</p>
    </div>
{% else %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="">
        Оставь первый комментарий
    </div>
    {% endif %}
{% endfor %}
<hr>
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    {% if app.user.isBanned() %}
        <p class="text-danger">Вы забанены до {{ app.user.bannedUntil|date('Y/m/d') }} и не можете оставлять комментарии!</p>
    {% else %}
        {{ include('comment/_form.html.twig') }}
    {% endif %}
{% else %}
    <p class="text-muted"><a href="{{ path('app_login') }}">Зарегистрируйтесь</a>, чтобы иметь возможность писать комментарии!</p>
{% endif %}
