{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ comment.user.name ? comment.user.name : 'unknown'}}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{{ comment.datetime ? comment.datetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Article Id</th>
                <td>{{ comment.article.id }}</td>
            </tr>
            <tr>
                <th>Parent_comment</th>
                <td>{{ comment.parentComment }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comment_index') }}">back to list</a>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
