{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="jumbotron text-center">
	<h3>Категория</h3>
</div>

<div class="container">
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Имя</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('category_index') }}">Вернуться к списку категорий</a>

    <a class="btn btn-primary mx-3" href="{{ path('category_edit', {'id': category.id}) }}">Редактировать</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
