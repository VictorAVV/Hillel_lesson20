<form class="d-inline-block" method="post" 
    action="{{ path('delete_user') }}" 
    onsubmit="return confirm('Вы уверенны, что хотите удалить пользователя {{ user.email }}?');">

    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.email) }}">
    <button class="btn btn-danger btn-sm">Удалить пользователя</button>
</form>